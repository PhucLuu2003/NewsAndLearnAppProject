<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsAndLearn"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="true">
        
        <!-- Login Activity as Launcher -->
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main Activity -->
        <activity
            android:name=".Activity.MainActivity"
            android:exported="false" />
        
        <!-- Register Activity -->
        <activity
            android:name=".Activity.RegisterActivity"
            android:exported="false" />
        
        <!-- Level Selection Activity -->
        <activity
            android:name=".Activity.LevelSelectionActivity"
            android:exported="false" />
        
        <!-- Topic Selection Activity -->
        <activity
            android:name=".Activity.TopicSelectionActivity"
            android:exported="false" />
        
        <!-- Search Activity -->
        <activity
            android:name=".Activity.SearchActivity"
            android:exported="false" />
        
        <!-- Article Detail Activity -->
        <activity
            android:name=".Activity.ArticleDetailActivity"
            android:exported="false" />
        
        <!-- Video Lesson Activity -->
        <activity
            android:name=".Activity.VideoLessonActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize" />
            
        <!-- All Videos Activity -->
        <activity
            android:name=".Activity.AllVideosActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- Flashcard Activity -->
        <activity
            android:name=".Activity.FlashcardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- Quiz Activity -->
        <activity
            android:name=".Activity.QuizActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- Admin Activity -->
        <activity
            android:name=".Activity.AdminActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Settings Activity -->
        <activity
            android:name=".Activity.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Vocabulary RPG Activity -->
        <activity
            android:name=".Activity.VocabularyRPGActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Battle Activity (RPG Game) -->
        <activity
            android:name=".Activity.BattleActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Listening Activity -->
        <activity
            android:name=".Activity.ListeningActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Grammar Lesson Activity -->
        <activity
            android:name=".Activity.GrammarLessonActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Speaking Activity -->
        <activity
            android:name=".Activity.SpeakingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Reading Activity -->
        <activity
            android:name=".Activity.ReadingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Writing Activity -->
        <activity
            android:name=".Activity.WritingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        
        <!-- Vocabulary Detail Activity -->
        <activity
            android:name=".Activity.VocabularyDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Enhanced Article Detail Activity -->
        <activity
            android:name=".Activity.EnhancedArticleDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Reading Analytics Activity -->
        <activity
            android:name=".Activity.ReadingAnalyticsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Super Reading Activity (AI-Powered) -->
        <activity
            android:name=".Activity.SuperReadingActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Pronunciation Beat Activity -->
        <activity
            android:name=".Activity.PronunciationBeatActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Pronunciation Game Activity -->
        <activity
            android:name=".Activity.PronunciationGameActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Game Result Activity -->
        <activity
            android:name=".Activity.GameResultActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <!-- Memory Palace Activities -->
        <activity
            android:name=".Activity.MemoryPalaceActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <activity
            android:name=".Activity.PalaceRoomsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        
        <activity
            android:name=".Activity.WordPlacementActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".Activity.MemoryWalkActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        
    </application>

</manifest>
