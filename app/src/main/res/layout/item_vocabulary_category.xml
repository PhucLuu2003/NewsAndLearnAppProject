<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ“‚ Vocabulary Category Card - Beautiful Grid Item -->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background Gradient -->
        <View
            android:id="@+id/bg_gradient"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/gradient_green_teal" />

        <!-- Decorative Elements -->
        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="-30dp"
            android:background="@drawable/circle_white_10"
            android:alpha="0.12" />

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="-20dp"
            android:layout_marginStart="-20dp"
            android:background="@drawable/circle_white_10"
            android:alpha="0.08" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Emoji Icon -->
            <TextView
                android:id="@+id/tv_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘‹"
                android:textSize="36sp" />

            <!-- Category Name -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Greetings"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Vietnamese Name -->
            <TextView
                android:id="@+id/tv_name_vi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="ChÃ o há»i"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:alpha="0.8" />

            <!-- Progress Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <!-- Progress Bar -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@drawable/progress_bg_white">

                    <View
                        android:id="@+id/progress_bar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/progress_fill_white" />
                </FrameLayout>

                <!-- Count Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/20"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.9" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Completion Badge (when 100%) -->
        <ImageView
            android:id="@+id/icon_completed"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="10dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="@android:color/white" />

    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
