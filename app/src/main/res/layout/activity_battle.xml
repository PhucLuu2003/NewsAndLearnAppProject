<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_header_bg">

    <!-- Monster Section -->
    <LinearLayout
        android:id="@+id/monster_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Monster Image -->
        <ImageView
            android:id="@+id/monster_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop" />

        <!-- Monster Name -->
        <TextView
            android:id="@+id/monster_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slime"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <!-- Monster HP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="❤️ Monster HP"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/monster_hp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100/100"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/monster_hp_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:max="100"
                android:progress="100"
                android:progressTint="#FF5252"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Battle Log -->
    <TextView
        android:id="@+id/battle_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Battle Start!"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#80000000"
        app:layout_constraintTop_toBottomOf="@id/monster_section" />

    <!-- Question Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/question_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/battle_log"
        app:layout_constraintBottom_toTopOf="@id/player_section">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Timer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="⏱️ Time Left"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/timer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30s"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />
                </LinearLayout>

                <!-- Question -->
                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What does 'Hello' mean?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="20dp" />

                <!-- Options -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/option_a"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. Xin chào"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="start|center_vertical"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/option_b"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. Tạm biệt"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="start|center_vertical"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/option_c"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. Cảm ơn"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="start|center_vertical"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/option_d"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. Xin lỗi"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="start|center_vertical"
                    android:paddingVertical="16dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Player Section -->
    <LinearLayout
        android:id="@+id/player_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Player HP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="❤️ Your HP"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/player_hp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100/100"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/player_hp_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/progress_gradient"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
