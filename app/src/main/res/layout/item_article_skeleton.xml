<?xml version="1.0" encoding="utf-8"?>
<!-- Skeleton Loading Card for Articles -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Skeleton Image -->
        <View
            android:id="@+id/skeleton_image"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:background="@drawable/skeleton_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Skeleton Category Badge -->
        <View
            android:id="@+id/skeleton_category"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:background="@drawable/skeleton_shimmer_rounded"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Skeleton Level Badge -->
        <View
            android:id="@+id/skeleton_level"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:background="@drawable/skeleton_shimmer_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skeleton_image">

            <!-- Skeleton Title Line 1 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="@drawable/skeleton_shimmer_rounded" />

            <!-- Skeleton Title Line 2 -->
            <View
                android:layout_width="200dp"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/skeleton_shimmer_rounded" />

            <!-- Skeleton Source & Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/skeleton_shimmer_rounded" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/skeleton_shimmer_rounded" />
            </LinearLayout>

            <!-- Skeleton Reading Time -->
            <View
                android:layout_width="120dp"
                android:layout_height="14dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/skeleton_shimmer_rounded" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
