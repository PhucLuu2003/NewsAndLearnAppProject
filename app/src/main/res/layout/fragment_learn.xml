<?xml version="1.0" encoding="utf-8"?>
<!-- Modern Light Theme Learn Fragment -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn English"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Choose your learning path"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- Daily Goal Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/daily_goal_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface_primary"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ¯ Daily Goal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/goal_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2/5 completed"
                        android:textSize="13sp"
                        android:textColor="@color/primary"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/daily_goal_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progress="40"
                    android:progressTint="@color/primary"
                    android:progressBackgroundTint="@color/border_secondary"
                    android:indeterminate="false" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Modules Grid (2 columns) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <!-- Vocabulary Module -->
            <androidx.cardview.widget.CardView
                android:id="@+id/vocabulary_card"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/module_vocabulary_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“š"
                            android:textSize="40sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Vocabulary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Learn words"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                        <!-- Progress Ring -->
                        <TextView
                            android:id="@+id/vocabulary_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="75%"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/badge_rounded_background"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Grammar Module -->
            <androidx.cardview.widget.CardView
                android:id="@+id/grammar_card"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/module_grammar_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“–"
                            android:textSize="40sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Grammar"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Master rules"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/grammar_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="60%"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/badge_rounded_background"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Listening Module -->
            <androidx.cardview.widget.CardView
                android:id="@+id/listening_card"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/module_listening_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ§"
                            android:textSize="40sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Listening"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Improve hearing"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/listening_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="45%"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/badge_rounded_background"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Speaking Module -->
            <androidx.cardview.widget.CardView
                android:id="@+id/speaking_card"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/module_speaking_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¤"
                            android:textSize="40sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Speaking"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Practice fluency"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/speaking_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="30%"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/badge_rounded_background"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Reading Module -->
            <androidx.cardview.widget.CardView
                android:id="@+id/reading_card"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/module_reading_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“°"
                            android:textSize="40sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Reading"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Read articles"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/reading_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="55%"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/badge_rounded_background"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Writing Module -->
            <androidx.cardview.widget.CardView
                android:id="@+id/writing_card"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/module_writing_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœï¸"
                            android:textSize="40sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Writing"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Practice essays"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/writing_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="20%"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:background="@drawable/badge_rounded_background"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</ScrollView>
