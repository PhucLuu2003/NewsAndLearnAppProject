<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Word Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="vocabulary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

            <TextView
                android:id="@+id/tv_word_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="noun"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="#E3F2FD"
                android:padding="6dp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Pronunciation -->
        <TextView
            android:id="@+id/tv_pronunciation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/vÉ™ËˆkÃ¦bjÊŠlÉ™ri/"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textStyle="italic"
            android:layout_marginBottom="12dp"/>

        <!-- Importance Stars -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_importance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:singleLine="true">
            <!-- Stars added dynamically -->
        </com.google.android.material.chip.ChipGroup>

        <!-- Definition -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Definition:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_definition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All the words you know and use"
                android:textSize="14sp"
                android:textColor="@color/text_primary"/>

        </LinearLayout>

        <!-- Vietnamese -->
        <TextView
            android:id="@+id/tv_vietnamese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‡»ðŸ‡³ Tá»« vá»±ng"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Example -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F5E9"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="&quot;Reading helps expand your vocabulary.&quot;"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="italic"/>

        </LinearLayout>

        <!-- Memory Tip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF9C4"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Memory Tip:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_memory_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Think of 'vocab' + 'library' = your word library!"
                android:textSize="14sp"
                android:textColor="@color/text_primary"/>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_skip_word"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Skip"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_got_it"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="âœ“ Got It!"
                android:textSize="14sp"
                app:cornerRadius="12dp"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
