<?xml version="1.0" encoding="utf-8"?>
<!-- Item layout for multiple choice options (Pill-shaped buttons) -->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/option_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#2C2C2E"
    app:cardCornerRadius="28dp"
    app:cardElevation="2dp"
    app:strokeColor="#4A80F0"
    app:strokeWidth="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Option Letter (A, B, C, D) -->
        <TextView
            android:id="@+id/option_letter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="A"
            android:textColor="#4A80F0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/option_letter_background"
            android:layout_marginEnd="16dp" />

        <!-- Option Text -->
        <TextView
            android:id="@+id/option_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Option text"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp" />

        <!-- Status Icon (Checkmark or X) -->
        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
