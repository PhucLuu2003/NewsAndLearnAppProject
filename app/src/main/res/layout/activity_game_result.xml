<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_header_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ† Song Complete!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp" />

        <!-- Success Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/success_animation"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:lottie_rawRes="@raw/success_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="false" />

        <!-- Rank -->
        <TextView
            android:id="@+id/rank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textSize="120sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:layout_marginTop="24dp" />

        <!-- Score Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Your Performance"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Score:"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8,750"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>

                <!-- Accuracy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Accuracy:"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/accuracy_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="94%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/green" />

                </LinearLayout>

                <!-- Max Combo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Max Combo:"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/combo_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x12"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFD700" />

                </LinearLayout>

                <!-- Hit Breakdown -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/perfect_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Perfect â­"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/great_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Great âœ“"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/good_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Good"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/miss_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Miss"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/play_again_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="ðŸ”„ Play Again"
            android:textSize="16sp"
            app:cornerRadius="30dp"
            app:backgroundTint="@color/primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:text="â† Back to Songs"
            android:textSize="16sp"
            app:cornerRadius="30dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@android:color/white"
            android:textColor="@android:color/white" />

    </LinearLayout>

    </ScrollView>

    <!-- Victory Confetti Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/confetti_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="100dp"
        app:lottie_rawRes="@raw/confetti"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

</FrameLayout>
