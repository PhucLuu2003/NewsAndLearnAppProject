<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Loading Indicator with Lottie Animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loading_indicator"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/loading"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/empty_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KhÃ´ng cÃ³ bÃ i viáº¿t nÃ o"
                android:textSize="16sp"
                android:textColor="#9E9E9E"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Celebration Confetti Animation (Level Up, Achievements) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/confetti_animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:elevation="100dp"
                app:lottie_rawRes="@raw/confetti"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


            <!-- Animated Gradient Header Background -->
            <View
                android:id="@+id/header_background"
                android:layout_width="match_parent"
                android:layout_height="365dp"
                android:background="@drawable/gradient_header_bg"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Header Container -->
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="48dp"
                android:paddingEnd="20dp"
                android:paddingBottom="24dp"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Top Bar with Profile -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Profile Avatar with Animated Frame -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!-- Animated Frame (Behind) -->
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/avatar_frame_animation"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/avatar_frame"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true" />

                        <!-- Avatar Card (On Top) -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/profile_card"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="8dp"
                            app:strokeColor="#FFFFFF"
                            app:strokeWidth="3dp">

                            <!-- Animated Lottie Avatar -->
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/profile_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:lottie_rawRes="@raw/profile_avatar_boy"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />
                        </com.google.android.material.card.MaterialCardView>
                    </FrameLayout>

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/greeting_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.95"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Good Morning ðŸ‘‹"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Loading..."
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Notification Button with Badge -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/notification_btn"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            app:cardBackgroundColor="#40FFFFFF"
                            app:cardCornerRadius="23dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_notification"
                                app:tint="#FFFFFF" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Notification Badge -->
                        <View
                            android:id="@+id/notification_badge"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/notification_badge_bg"
                            android:visibility="gone" />
                    </FrameLayout>

                    <!-- Settings Button -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/settings_btn"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        app:cardBackgroundColor="#40FFFFFF"
                        app:cardCornerRadius="23dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_settings"
                            app:tint="#FFFFFF" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>


                <!-- Enhanced Search Bar with Dropdown -->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <!-- Search Bar Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/search_card"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="12dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_search"
                                app:tint="#764ba2" />

                            <EditText
                                android:id="@+id/search_input_home"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="Search articles, lessons..."
                                android:imeOptions="actionSearch"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="#1A1A2E"
                                android:textColorHint="#9E9E9E"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium" />

                            <ImageView
                                android:id="@+id/clear_search_btn"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:padding="4dp"
                                android:src="@android:drawable/ic_menu_close_clear_cancel"
                                android:visibility="gone"
                                app:tint="#BDBDBD" />

                            <ImageView
                                android:id="@+id/voice_search_btn"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:padding="2dp"
                                android:src="@drawable/ic_voice"
                                app:tint="#764ba2" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Search Suggestions Dropdown -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/search_suggestions_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="68dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <!-- Suggestions Header -->
                            <TextView
                                android:id="@+id/suggestions_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="12dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:text="Suggestions"
                                android:textColor="#666666"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <!-- Suggestions RecyclerView -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/search_suggestions_recycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxHeight="400dp"
                                android:nestedScrollingEnabled="false"
                                android:overScrollMode="never" />

                            <!-- Loading Indicator -->
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/search_loading"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="16dp"
                                android:visibility="gone"
                                app:lottie_rawRes="@raw/loading"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />

                            <!-- No Results -->
                            <TextView
                                android:id="@+id/no_results_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="24dp"
                                android:text="ðŸ˜” No results found"
                                android:textColor="#999999"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>

                <!-- ðŸ“Š Stats Cards - Clean Modern Design -->
                <LinearLayout
                    android:id="@+id/stats_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- ðŸ”¥ Streak Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/streak_card"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#FFEBE6"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <!-- Fire Animation -->
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/fire_animation"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:lottie_rawRes="@raw/fire_icon"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                app:lottie_speed="0.8" />

                            <!-- Streak Count -->
                            <TextView
                                android:id="@+id/streak_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="0"
                                android:textColor="#FF5722"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                            <!-- Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Day Streak"
                                android:textColor="#9E9E9E"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- âš¡ XP Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/score_card"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#EDE7F6"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <!-- Lightning Icon -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš¡"
                                android:textSize="32sp" />

                            <!-- XP Text -->
                            <TextView
                                android:id="@+id/user_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:maxLines="1"
                                android:text="0/100"
                                android:textColor="#7C4DFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                            <!-- Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XP Points"
                                android:textColor="#9E9E9E"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium" />

                            <!-- XP Progress Bar -->
                            <ProgressBar
                                android:id="@+id/xp_progress_bar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_marginTop="6dp"
                                android:max="100"
                                android:progress="0"
                                android:progressBackgroundTint="#E0E0E0"
                                android:progressTint="#7C4DFF" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ðŸ† Rank Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rank_card"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#FFF3E0"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <!-- Trophy Animation -->
                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/trophy_animation"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:lottie_rawRes="@raw/trophy_animation"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />

                            <!-- Rank Number -->
                            <TextView
                                android:id="@+id/user_rank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="#0"
                                android:textColor="#FF9800"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                            <!-- Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your Rank"
                                android:textColor="#9E9E9E"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="80dp"
                app:layout_constraintTop_toBottomOf="@id/header_container">

                <!-- Enhanced Filter Chips -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="28dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“š Browse by Level"
                        android:textSize="18sp"
                        android:textColor="#1A1A2E"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="-0.01" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/level_chips_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:scrollbars="none"
                    android:fadingEdge="horizontal"
                    android:requiresFadingEdge="horizontal"
                    android:fadingEdgeLength="24dp">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/level_chip_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:chipSpacingHorizontal="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_all"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:text="âœ¨ All Levels"
                            android:checked="true"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif-medium"
                            app:chipBackgroundColor="@color/chip_bg_selector"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="22dp"
                            app:chipMinHeight="44dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_easy"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:text="ðŸŸ¢ Easy"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif-medium"
                            app:chipBackgroundColor="@color/chip_bg_selector"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="22dp"
                            app:chipMinHeight="44dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_medium"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:text="ðŸŸ¡ Medium"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif-medium"
                            app:chipBackgroundColor="@color/chip_bg_selector"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="22dp"
                            app:chipMinHeight="44dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_hard"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:text="ðŸ”´ Hard"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif-medium"
                            app:chipBackgroundColor="@color/chip_bg_selector"
                            app:chipStrokeWidth="0dp"
                            app:chipCornerRadius="22dp"
                            app:chipMinHeight="44dp" />
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

                <!-- Featured Today Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­ Featured Today"
                    android:textSize="22sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp" />

                <!-- Hero Featured Card with Enhanced Design -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/hero_card"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="12dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Background Image -->
                        <ImageView
                            android:id="@+id/featured_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_article"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Scrim Gradient Overlay -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/hero_card_gradient"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Badge -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/daily_pick_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#80000000"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ¨ DAILY PICK"
                                android:textSize="11sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:letterSpacing="0.1" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <TextView
