<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Grammar Card with Gradient Accent -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Gradient Left Bar -->
        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_purple_pink" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Glassmorphic Category Badge -->
            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="TENSES"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textColor="#8B5CF6"
                android:background="@drawable/badge_rounded_background"
                android:backgroundTint="#F3E5F5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:elevation="2dp" />

            <!-- Level Badge -->
            <TextView
                android:id="@+id/level_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="B1"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/badge_rounded_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:elevation="4dp" />

            <!-- Title with Enhanced Typography -->
            <TextView
                android:id="@+id/lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_text"
                android:layout_marginTop="16dp"
                android:text="Present Perfect Tense"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1D"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Description -->
            <TextView
                android:id="@+id/lesson_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lesson_title"
                android:layout_marginTop="8dp"
                android:text="Learn how to use the present perfect tense"
                android:textSize="15sp"
                android:textColor="#666666"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Bottom Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/lesson_description"
                android:layout_marginTop="12dp"
                android:background="#F0F0F0" />

            <!-- Footer Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Exercises Count -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_edit"
                        app:tint="#757575" />

                    <TextView
                        android:id="@+id/exercise_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="5 exercises"
                        android:textSize="12sp"
                        android:textColor="#757575" />

                </LinearLayout>

                <!-- Status Text and Icon -->
                <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center_vertical">
                     
                     <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:id="@+id/completion_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        android:visibility="gone"
                        app:tint="#4CAF50" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
