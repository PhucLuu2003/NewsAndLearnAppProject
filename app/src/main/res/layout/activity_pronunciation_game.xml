<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <!-- Top HUD -->
    <LinearLayout
        android:id="@+id/top_hud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#2D2D44">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/score_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Score: 0"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/combo_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Combo: x0"
                android:textSize="16sp"
                android:textColor="#FFD700"
                android:gravity="center" />

            <TextView
                android:id="@+id/accuracy_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accuracy: 0%"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="end" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressTint="#4CAF50" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/20"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Game Container -->
    <FrameLayout
        android:id="@+id/game_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_hud"
        android:layout_above="@id/bottom_controls">

        <!-- Hit Zone -->
        <View
            android:id="@+id/hit_zone"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FFD700"
            android:layout_gravity="center_horizontal"
            android:alpha="0.7" />

        <!-- Feedback Text -->
        <TextView
            android:id="@+id/feedback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERFECT!"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#2D2D44">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¤ Speak when words enter the zone!"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="â–¶ Start Game"
            android:textSize="18sp"
            app:cornerRadius="30dp"
            app:backgroundTint="@color/primary" />

    </LinearLayout>

</RelativeLayout>
