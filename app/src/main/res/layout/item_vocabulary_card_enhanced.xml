<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced Vocabulary Card with Dynamic Animations -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/surface_primary"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/border_secondary"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Content Area -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Mastery Badge with Gradient -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mastery_badge_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_badge_bg">

                    <TextView
                        android:id="@+id/mastery_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="Learning"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Word with Animated Underline -->
            <LinearLayout
                android:id="@+id/word_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/mastery_badge_container"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/word_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambitious"
                    android:textColor="@color/text_primary"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Animated Progress Line -->
                <View
                    android:id="@+id/word_underline"
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/gradient_blue_purple" />
            </LinearLayout>

            <!-- Phonetic with Icon -->
            <LinearLayout
                android:id="@+id/phonetic_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/word_container"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_volume"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/phonetic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="monospace"
                    android:text="/Ã¦mËˆbÉªÊƒ.É™s/"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Translation with Background -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/translation_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phonetic_container"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/translation_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:padding="12dp"
                    android:text="Äáº§y tham vá»ng, cÃ³ nhiá»u hoÃ i bÃ£o"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_secondary" />

        <!-- Bottom Action Area with Glassmorphism -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_secondary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <!-- Circular Progress with Animation -->
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <!-- Background Circle -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_progress_bg" />

                <!-- Progress Ring -->
                <ProgressBar
                    android:id="@+id/mastery_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/circular_progress_animated" />

                <!-- Percentage Text -->
                <TextView
                    android:id="@+id/mastery_percentage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="60%"
                    android:textColor="@color/primary"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Review Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/next_review_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next review: 2 days"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/streak_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="ðŸ”¥ 3 day streak"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Action Buttons with Ripple -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Speaker Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/speaker_button_container"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardBackgroundColor="@color/surface_primary"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:id="@+id/speaker_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_volume"
                        app:tint="@color/primary" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Favorite Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/favorite_button_container"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardBackgroundColor="@color/surface_primary"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/border_secondary"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:id="@+id/favorite_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_favorite_border"
                        app:tint="@color/text_hint" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
