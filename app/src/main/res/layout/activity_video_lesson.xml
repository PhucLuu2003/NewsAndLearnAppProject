<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ExoPlayer View - FULL SCREEN (for MP4/HLS) -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:show_buffering="when_playing"
        app:resize_mode="fit"
        app:controller_layout_id="@layout/exo_player_control_view"
        app:use_controller="true"
        app:hide_on_touch="false"
        android:visibility="visible" />

    <!-- WebView for YouTube playback -->
    <WebView
        android:id="@+id/youtube_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone" />

    <!-- Video Overlay -->
    <View
        android:id="@+id/video_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:alpha="0" />

    <!-- Title Overlay (Top) -->
    <LinearLayout
        android:id="@+id/title_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="48dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/gradient_overlay_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/circle_button_bg"
                android:backgroundTint="#33FFFFFF"
                android:padding="8dp"
                app:tint="#FFFFFF"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/lesson_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lesson Title"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/lesson_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Level A1"
                    android:textColor="#4CAF50"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/level_badge_background" />
            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

    <!-- Progress Container (Bottom) -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/question_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q 1/5"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/badge_background_blue"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:layout_marginEnd="8dp" />

        <ProgressBar
            android:id="@+id/lesson_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:progressDrawable="@drawable/xp_progress_bar"
            android:max="100"
            android:progress="0" />
    </LinearLayout>

    <!-- Question Container - Bottom Sheet Style -->
    <LinearLayout
        android:id="@+id/question_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_background"
        android:visibility="gone"
        android:translationY="500dp"
        android:elevation="20dp">
        
        <!-- Drag Handle Indicator -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_rect_8dp"
            android:backgroundTint="#66FFFFFF"/>

        <FrameLayout
            android:id="@+id/question_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="300dp"
            android:padding="16dp" />
            
    </LinearLayout>

    <!-- Feedback Icons -->
    <ImageView
        android:id="@+id/correct_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_check_circle"
        android:visibility="gone"
        app:tint="#4CAF50" />

    <ImageView
        android:id="@+id/incorrect_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_error_circle"
        android:visibility="gone"
        app:tint="#F44336" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#4A80F0"
        android:visibility="gone" />

</FrameLayout>
