<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <!-- Question Text -->
    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the correct answer?"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Options Container (RecyclerView for flexibility) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/question_text" />

    <!-- Explanation Card (shown when answer is incorrect) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/explanation_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#2C2C2E"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/options_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                app:tint="#64B5F6"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/explanation_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Explanation text goes here"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Continue Button (shown after answering) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Tiếp tục"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="#4CAF50"
        app:cornerRadius="16dp"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/explanation_card" />

</androidx.constraintlayout.widget.ConstraintLayout>
