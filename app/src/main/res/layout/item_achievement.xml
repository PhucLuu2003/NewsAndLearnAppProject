<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ¯ Achievement Item Component - Modern Design -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/card_bg"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Achievement Icon Container -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

            <!-- Icon Background Circle -->
            <View
                android:id="@+id/achievement_icon_bg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_stat_icon_1" />

            <!-- Achievement Icon/Emoji -->
            <TextView
                android:id="@+id/achievementIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="32sp"
                tools:text="ðŸ†" />

            <!-- Lock Overlay (for locked achievements) -->
            <ImageView
                android:id="@+id/lockOverlay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock"
                android:visibility="gone"
                app:tint="@color/text_tertiary" />
        </FrameLayout>

        <!-- Achievement Name -->
        <TextView
            android:id="@+id/achievementName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="Week Warrior" />

        <!-- Achievement Description -->
        <TextView
            android:id="@+id/achievementDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="#5A6C7D"
            android:textSize="10sp"
            tools:text="7 day streak" />

        <!-- Progress Bar (for in-progress achievements) -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/achievementProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:indicatorColor="#5E72E4"
            app:trackColor="#E9ECEF"
            app:trackCornerRadius="4dp"
            app:trackThickness="4dp"
            tools:progress="50" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/achievementProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#95AAC9"
            android:textSize="9sp"
            tools:text="3 / 7" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
