<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Achievement Badge with Gradient Glow -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="150dp"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/glass_card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Badge Icon with Gradient Glow -->
            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp">

                <!-- Glow Effect -->
                <View
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/gradient_gold"
                    android:alpha="0.3" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/badge_icon_card"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_gold">

                        <TextView
                            android:id="@+id/badge_emoji"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="ðŸ†"
                            android:textSize="36sp" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- Badge Name -->
            <TextView
                android:id="@+id/badge_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="First Step"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Badge Progress -->
            <TextView
                android:id="@+id/badge_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="3/5"
                android:textColor="#FFD700"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
