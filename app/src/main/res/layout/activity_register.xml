<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ¨ IMPROVED REGISTER SCREEN - Clear, Modern, Professional -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient Background -->
    <View
        android:id="@+id/animated_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_blue_purple" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Back Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/back_button_card"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="22dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <!-- App Logo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logo_card"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="45dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_button_card">

                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile"
                    app:tint="#6366F1" />
            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:id="@+id/title_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Create Account"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo_card" />

            <TextView
                android:id="@+id/subtitle_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Start your learning journey today"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:alpha="0.95"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_register" />

            <!-- Clean White Register Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/register_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subtitle_register">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Username Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textColor="#374151"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/username_container"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_background_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_profile"
                            app:tint="#6366F1" />

                        <EditText
                            android:id="@+id/username_input_register"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="Enter your username"
                            android:inputType="text"
                            android:textColor="#1F2937"
                            android:textColorHint="#9CA3AF"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Email Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textColor="#374151"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/email_container"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_background_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_dialog_email"
                            app:tint="#6366F1" />

                        <EditText
                            android:id="@+id/email_input_register"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="Enter your email"
                            android:inputType="textEmailAddress"
                            android:textColor="#1F2937"
                            android:textColorHint="#9CA3AF"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Password Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="#374151"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/password_container"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_background_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_lock_lock"
                            app:tint="#6366F1" />

                        <EditText
                            android:id="@+id/password_input_register"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="Enter your password"
                            android:inputType="textPassword"
                            android:textColor="#1F2937"
                            android:textColorHint="#9CA3AF"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/password_toggle"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_visibility"
                            app:tint="#6B7280" />
                    </LinearLayout>

                    <!-- Confirm Password Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password"
                        android:textColor="#374151"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/confirm_password_container"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_background_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_lock_lock"
                            app:tint="#6366F1" />

                        <EditText
                            android:id="@+id/confirm_password_input_register"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="Confirm your password"
                            android:inputType="textPassword"
                            android:textColor="#1F2937"
                            android:textColorHint="#9CA3AF"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Register Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/register_button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:text="Create Account"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#6366F1"
                        app:cornerRadius="16dp"
                        app:elevation="4dp" />

                    <!-- Loading Progress -->
                    <ProgressBar
                        android:id="@+id/register_progress"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-44dp"
                        android:indeterminateTint="#FFFFFF"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Divider -->
            <LinearLayout
                android:id="@+id/divider_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/register_card">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#40FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="or sign up with"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#40FFFFFF" />
            </LinearLayout>

            <!-- Social Login Buttons -->
            <LinearLayout
                android:id="@+id/social_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_layout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/google_login_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="6dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_google_logo" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/facebook_login_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#1877F2"
                    app:cardElevation="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="f"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Login Link -->
            <LinearLayout
                android:id="@+id/login_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/social_buttons">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/login_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>