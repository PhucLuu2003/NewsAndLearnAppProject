<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    android:fitsSystemWindows="false">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#00000000">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:background="@drawable/circle_button_bg"
                android:backgroundTint="#33FFFFFF"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pronunciation"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read aloud"
                android:textColor="#9E9E9E"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- Prompt Card -->
            <TextView
                android:id="@+id/prompt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hello, how are you today?"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/play_sample_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_volume"
                android:padding="16dp"
                android:background="@drawable/circle_button_primary"
                android:backgroundTint="#33FFFFFF"
                app:tint="#4A80F0" />
                
            <!-- Waveform Placeholder -->
            <View
                android:id="@+id/waveform_view"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/rounded_rect_8dp"
                android:backgroundTint="#1AFFFFFF"
                android:visibility="invisible"/>

            <!-- Status -->
            <LinearLayout
                android:id="@+id/status_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tap microphone to start"
                android:textColor="#9E9E9E"
                android:textSize="16sp" />
                
            <ProgressBar
                android:id="@+id/recording_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:progressDrawable="@drawable/xp_progress_bar"
                android:visibility="invisible"/>
            </LinearLayout>

            <!-- Scores Result Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scores_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#2C2C2E"
                app:cardCornerRadius="24dp"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Result"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pronunciation"
                                android:textSize="12sp"
                                android:textColor="#B0B0B0" />

                            <TextView
                                android:id="@+id/pronunciation_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="85%"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fluency"
                                android:textSize="12sp"
                                android:textColor="#B0B0B0" />

                            <TextView
                                android:id="@+id/fluency_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="78%"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#FF9800" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/try_again_button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:text="Try Again"
                        android:textSize="16sp"
                        app:cornerRadius="16dp"
                        app:backgroundTint="#3A3A3C"
                        app:strokeColor="#66FFFFFF"
                        app:strokeWidth="1dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Floating Record Button -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp">
    
        <View
            android:id="@+id/pulse_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_button_bg"
            android:backgroundTint="#33F44336"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/record_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_button_primary"
            android:backgroundTint="#F44336"
            android:src="@drawable/ic_mic"
            app:tint="#FFFFFF"
            android:elevation="6dp"
            android:padding="20dp"
            android:scaleType="fitCenter"/>
            
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
