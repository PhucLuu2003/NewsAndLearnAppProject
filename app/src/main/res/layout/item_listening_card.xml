<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Listening Card with Gradient Overlay -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Thumbnail with Gradient Overlay -->
            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/surface_secondary"
                    android:background="@drawable/rounded_rect_8dp"
                    android:clipToOutline="true" />

                <!-- Gradient Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay_background"
                    android:alpha="0.3" />
                
                <!-- Play Icon with Glassmorphism -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    android:padding="8dp"
                    android:background="@drawable/glass_button_background"
                    android:elevation="4dp"
                    app:tint="#FFFFFF" />
            </FrameLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:id="@+id/level_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B1"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/badge_rounded_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:elevation="2dp" />
                        
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    
                    <TextView
                        android:id="@+id/duration_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5:30"
                        android:textSize="13sp"
                        android:textColor="#64B5F6"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_play"
                        android:drawablePadding="4dp"
                        app:drawableTint="#64B5F6" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lesson_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Daily Conversation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1D"
                    android:maxLines="2"
                    android:ellipsize="end" />
                
                <TextView
                    android:id="@+id/questions_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="5 questions"
                    android:textSize="13sp"
                    android:textColor="#666666" />

            </LinearLayout>
        </LinearLayout>

        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#F0F0F0" />

        <!-- Progress/Score Section -->
        <LinearLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:progress="75"
                android:progressDrawable="@drawable/xp_progress_bar" />

            <TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="75%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
