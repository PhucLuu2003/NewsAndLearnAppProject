                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Beginner tales"
                                android:textSize="10sp"
                                android:textColor="#FFFFFF"
