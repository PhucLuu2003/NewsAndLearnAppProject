<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Search Result Card -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Type Badge -->
            <TextView
                android:id="@+id/result_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARTICLE"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/badge_rounded_background"
                android:backgroundTint="#64B5F6"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:elevation="2dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Level Badge -->
            <TextView
                android:id="@+id/result_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B1"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/badge_rounded_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:elevation="2dp" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Search Result Title"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#1A1A1D"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Description -->
        <TextView
            android:id="@+id/result_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Brief description of the search result..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp" />

        <!-- Footer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/result_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category"
                android:textSize="12sp"
                android:textColor="#999999"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@android:drawable/ic_menu_compass"
                app:drawableTint="#64B5F6" />

            <TextView
                android:id="@+id/result_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 days ago"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>