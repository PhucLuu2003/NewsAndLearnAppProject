<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#6366F1"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¨ Lottie Animation Test"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Profile Avatar Animation -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="8dp"
        app:strokeWidth="4dp"
        app:strokeColor="#FFFFFF"
        android:layout_marginBottom="24dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/avatar_animation_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/profile_avatar_boy"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Avatar Animation"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="48dp" />

    <!-- Success Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/success_animation_test"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/success_animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success Animation"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
