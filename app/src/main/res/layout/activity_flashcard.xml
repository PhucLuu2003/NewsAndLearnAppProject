<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Flashcard Layout with 3D Flip & Swipe Gestures -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:padding="4dp"
                app:tint="@color/white" />

            <ProgressBar
                android:id="@+id/flashcard_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_gradient" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/known_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ“ 0"
                android:textColor="@color/success"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/learning_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŸ³ 0"
                android:textColor="@color/warning"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/remaining_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‹¯ 0"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Flashcard Container -->
    <FrameLayout
        android:id="@+id/flashcard_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <!-- Swipe Indicators -->
        <TextView
            android:id="@+id/swipe_left_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="â† Learning"
            android:textColor="@color/warning"
            android:textSize="18sp"
            android:textStyle="bold"
            android:alpha="0"
            android:padding="16dp"
            android:background="@drawable/glass_card_background" />

        <TextView
            android:id="@+id/swipe_right_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="Known â†’"
            android:textColor="@color/success"
            android:textSize="18sp"
            android:textStyle="bold"
            android:alpha="0"
            android:padding="16dp"
            android:background="@drawable/glass_card_background" />

        <!-- Flashcard -->
        <androidx.cardview.widget.CardView
            android:id="@+id/flashcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/dark_card"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Front Side (Word) -->
                <LinearLayout
                    android:id="@+id/card_front"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:background="@drawable/gradient_blue_purple">

                    <TextView
                        android:id="@+id/word_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Word"
                        android:textColor="@color/white"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/pronunciation_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="/prÉ™ËŒnÊŒnsiËˆeÉªÊƒn/"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:alpha="0.8" />

                    <ImageView
                        android:id="@+id/speaker_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/ic_volume"
                        android:padding="8dp"
                        android:background="@drawable/glass_button_background"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Tap to flip"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:alpha="0.6" />
                </LinearLayout>

                <!-- Back Side (Definition) -->
                <LinearLayout
                    android:id="@+id/card_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:background="@drawable/gradient_purple_pink"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/definition_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Definition"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/example_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Example sentence here"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:fontFamily="serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Swipe to answer"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:alpha="0.6" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- Bottom Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Swipe Hints -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â† Still Learning"
                android:textColor="@color/warning"
                android:textSize="12sp"
                android:gravity="start" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I Know This â†’"
                android:textColor="@color/success"
                android:textSize="12sp"
                android:gravity="end" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/learning_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Still Learning"
                android:textColor="@color/white"
                app:backgroundTint="@color/warning"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_rotate"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/known_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="I Know This"
                android:textColor="@color/white"
                app:backgroundTint="@color/success"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_check"
                app:iconTint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Completion Overlay -->
    <FrameLayout
        android:id="@+id/completion_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:visibility="gone"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰"
                android:textSize="72sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Great Job!"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/completion_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="You've reviewed all cards"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/finish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Finish"
                android:textColor="@color/white"
                app:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                android:paddingStart="48dp"
                android:paddingEnd="48dp" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
