<?xml version="1.0" encoding="utf-8"?>
<!-- Vocabulary module card background -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/overlay_light">
    <item>
        <layer-list>
            <!-- Gradient background -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="@color/module_vocab_primary"
                        android:endColor="@color/module_vocab_secondary"
                        android:type="linear" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            
            <!-- Overlay for depth -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#10000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
