<?xml version="1.0" encoding="utf-8"?>
<!-- Elevated card with shadow effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:top="2dp"
        android:right="2dp"
        android:bottom="4dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/overlay_dark" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Card -->
    <item
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp"
        android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_card" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
