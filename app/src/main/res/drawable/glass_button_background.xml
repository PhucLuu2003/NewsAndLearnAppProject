<?xml version="1.0" encoding="utf-8"?>
<!-- Glassmorphism button background -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/glass_white">
    <item>
        <layer-list>
            <!-- Background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_white" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            
            <!-- Border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/glass_border" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
