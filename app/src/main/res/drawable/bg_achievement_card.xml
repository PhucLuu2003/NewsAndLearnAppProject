<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸŽ¯ Achievement Card Background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#06000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Card -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_bg" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/border_light" />
        </shape>
    </item>
</layer-list>
