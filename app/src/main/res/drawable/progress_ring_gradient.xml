<?xml version="1.0" encoding="utf-8"?>
<!-- Circular progress ring foreground with gradient -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="ring"
            android:innerRadiusRatio="2.5"
            android:thickness="4dp"
            android:useLevel="true">
            <gradient
                android:angle="0"
                android:startColor="@color/gradient_blue_purple_start"
                android:endColor="@color/gradient_blue_purple_end"
                android:type="sweep" />
        </shape>
    </item>
</layer-list>
