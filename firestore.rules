rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // HELPER FUNCTIONS
    // =========================
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // =========================
    // USERS - CHO PHÉP ĐỌC TẤT CẢ ĐỂ XEM LEADERBOARD
    // =========================
    match /users/{userId} {
      allow read: if isAuth();
      allow write: if isOwner(userId);

      match /{sub=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // =========================
    // USER DATA NGOAI USERS
    // =========================
    match /daily_goals/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /module_progress/{progressId} {
      allow read, write: if isAuth();
    }

    // =========================
    // ARTICLES
    // =========================
    match /articles/{articleId} {
      allow read, write: if isAuth();
    }

    // =========================
    // VOCABULARY
    // =========================
    match /vocabularies/{vocabId} {
      allow read, write: if isAuth();
    }

    match /vocabulary_sets/{setId} {
      allow read, write: if isAuth();

      match /words/{wordId} {
        allow read, write: if isAuth();
      }
    }

    // =========================
    // SURVIVAL VOCABULARY (New Feature)
    // =========================
    match /vocabulary_categories/{categoryId} {
      allow read, write: if isAuth();
    }

    match /survival_words/{wordId} {
      allow read, write: if isAuth();
    }

    // =========================
    // PHONICS FOUNDATION (New Feature)
    // =========================
    match /phonics_lessons/{lessonId} {
      allow read, write: if isAuth();
    }

    // =========================
    // READING
    // =========================
    match /reading_articles/{articleId} {
      allow read, write: if isAuth();
    }

    match /reading_lessons/{lessonId} {
      allow read, write: if isAuth();

      match /{sub=**} {
        allow read, write: if isAuth();
      }
    }

    // =========================
    // WRITING
    // =========================
    match /writing_lessons/{lessonId} {
      allow read, write: if isAuth();

      match /{sub=**} {
        allow read, write: if isAuth();
      }
    }

    // =========================
    // LISTENING
    // =========================
    match /listening_lessons/{lessonId} {
      allow read, write: if isAuth();

      match /{sub=**} {
        allow read, write: if isAuth();
      }
    }

    // =========================
    // SPEAKING
    // =========================
    match /speaking_lessons/{lessonId} {
      allow read, write: if isAuth();

      match /{sub=**} {
        allow read, write: if isAuth();
      }
    }

    // =========================
    // GRAMMAR
    // =========================
    match /grammar_lessons/{lessonId} {
      allow read, write: if isAuth();

      match /{sub=**} {
        allow read, write: if isAuth();
      }
    }

    // =========================
    // VIDEO
    // =========================
    match /video_lessons/{lessonId} {
      allow read, write: if isAuth();
    }

    // =========================
    // FLASHCARD / QUIZ
    // =========================
    match /flashcard_decks/{deckId} {
      allow read, write: if isAuth();

      match /cards/{cardId} {
        allow read, write: if isAuth();
      }
    }

    match /quiz_templates/{quizId} {
      allow read, write: if isAuth();

      match /questions/{questionId} {
        allow read, write: if isAuth();
      }
    }

    // =========================
    // RPG
    // =========================
    match /rpg_characters/{id} {
      allow read, write: if isAuth();
    }

    match /rpg_enemies/{id} {
      allow read, write: if isAuth();
    }

    match /rpg_items/{id} {
      allow read, write: if isAuth();
    }

    match /rpg_battles/{id} {
      allow read, write: if isAuth();
    }

    // =========================
    // SYSTEM
    // =========================
    match /app_config/{id} {
      allow read, write: if isAuth();
    }

    match /announcements/{id} {
      allow read, write: if isAuth();
    }

    match /test/{id} {
      allow read, write: if isAuth();
    }

    // =========================
    // ANALYTICS
    // =========================
    match /analytics/{id} {
      allow read, write: if isAuth();
    }

    match /activity_logs/{logId} {
      allow read, write: if isAuth();
    }

    // =========================
    // COMMENTS
    // =========================
    match /comments/{commentId} {
      allow read, write: if isAuth();
    }

    // =========================
    // LEADERBOARD
    // =========================
    match /leaderboards/{id} {
      allow read, write: if isAuth();
    }
  }
}
