rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // HELPER FUNCTIONS
    // =========================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    // =========================
    // USERS
    // =========================
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();

      match /{sub=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // =========================
    // USER DATA NGOAI USERS
    // =========================
    match /daily_goals/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /module_progress/{progressId} {
      allow read, write: if isAuthenticated();
    }

    // =========================
    // ARTICLES (CO SEED 1 LAN)
    // =========================
    match /articles/{articleId} {
      allow read: if isAuthenticated();
      
      // Allow authenticated users to create articles (for seeding)
      // In production, you might want to restrict this to admin only
      allow create: if isAuthenticated();

      // Chi admin duoc sua / xoa
      allow update, delete: if isAdmin();
    }

    // =========================
    // VOCABULARY
    // =========================
    match /vocabularies/{vocabId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /vocabulary_sets/{setId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /words/{wordId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    // =========================
    // READING
    // =========================
    match /reading_articles/{articleId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /reading_lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /{sub=**} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    // =========================
    // WRITING
    // =========================
    match /writing_lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /{sub=**} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    // =========================
    // LISTENING
    // =========================
    match /listening_lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /{sub=**} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    // =========================
    // SPEAKING
    // =========================
    match /speaking_lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /{sub=**} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    // =========================
    // GRAMMAR
    // =========================
    match /grammar_lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /{sub=**} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    // =========================
    // VIDEO
    // =========================
    match /video_lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // =========================
    // FLASHCARD / QUIZ
    // =========================
    match /flashcard_decks/{deckId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /cards/{cardId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    match /quiz_templates/{quizId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /questions/{questionId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    // =========================
    // RPG
    // =========================
    match /rpg_characters/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /rpg_enemies/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /rpg_items/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /rpg_battles/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // =========================
    // SYSTEM
    // =========================
    match /app_config/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /announcements/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // =========================
    // ANALYTICS
    // =========================
    match /analytics/{id} {
      allow read, write: if isAdmin();
    }

    match /activity_logs/{logId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
    }

    // =========================
    // COMMENTS
    // =========================
    match /comments/{commentId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
    }

    // =========================
    // LEADERBOARD
    // =========================
    match /leaderboards/{id} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // =========================
    // DEFAULT DENY
    // =========================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
